{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowJs": true,
		"lib": ["esnext", "dom"],
		"types": ["vite/client", "node"]
	},
	"include": [
		"docs/.vitepress/**/*.ts",
		"docs/.vitepress/**/*.d.ts",
		"docs/.vitepress/**/*.tsx",
		"docs/.vitepress/**/*.vue",
		"docs/.vitepress/theme/Composables/colorFromTag.js"
	]
}
